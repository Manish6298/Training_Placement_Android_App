<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context=".Resume"
    tools:targetApi="lollipop">

    <androidx.appcompat.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:id="@+id/toolBarResume"
        android:textAlignment="center"
        app:titleTextColor="@color/colorWhite"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="45dp"
        android:fontFamily="@font/new_rocker"
        android:text="Resume Builder"
        android:textAlignment="center"
        android:textColor="@color/colorWhite"
        android:textSize="40sp"
        android:textStyle="bold" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Build your Resume Now !"
        android:layout_marginTop="90dp"
        android:textAlignment="center"
        android:textSize="25sp"
        android:textStyle="italic"
        android:textColor="#D9E9DF"
        />

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:layout_marginTop="150dp"
        android:layout_marginStart="20sp"
        app:cardBackgroundColor="@android:color/transparent"
        app:cardCornerRadius="10dp"
        app:cardElevation="0dp"
        android:layout_marginEnd="20sp">

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                tools:ignore="ScrollViewSize">

                <TextView
                    android:id="@+id/textView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="10dp"
                    android:fontFamily="serif-monospace"
                    android:text="Info"
                    android:textColor="#EB000000"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    tools:ignore="HardcodedText" />

                <EditText
                    android:id="@+id/editText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp"
                    android:ems="10"
                    android:inputType="textPersonName"
                    android:hint="Full Name"
                    tools:ignore="Autofill,HardcodedText,LabelFor" />

                <EditText
                    android:id="@+id/editText2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp"
                    android:hint="DOB"
                    tools:ignore="Autofill,HardcodedText,LabelFor"
                    android:ems="10"
                    android:inputType="date" />

                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginTop="20dp"
                    android:fontFamily="serif-monospace"
                    android:textColor="#EB000000"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    android:text="Gender :"
                    tools:ignore="HardcodedText" />

                <RadioGroup
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:layout_marginBottom="10dp">



                    <RadioButton
                        android:id="@+id/radioButton"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginTop="20sp"
                        android:layout_marginStart="2sp"
                        android:layout_marginBottom="10sp"
                        android:textSize="20sp"
                        android:text="Male"
                        tools:ignore="HardcodedText" />

                    <RadioButton
                        android:id="@+id/radioButton2"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginTop="20sp"
                        android:layout_marginStart="2sp"
                        android:layout_marginBottom="10sp"
                        android:textSize="20sp"
                        android:text="Female"
                        tools:ignore="HardcodedText" />

                    <RadioButton
                        android:id="@+id/radioButton3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginTop="20sp"
                        android:layout_marginStart="2sp"
                        android:layout_marginBottom="10sp"
                        android:textSize="20sp"
                        android:text="Other"
                        tools:ignore="HardcodedText" />
                </RadioGroup>

                <EditText
                    android:id="@+id/editText5"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp"
                    android:ems="10"
                    android:hint="Email"
                    android:inputType="textEmailAddress"
                    tools:ignore="Autofill,HardcodedText,LabelFor" />

                <EditText
                    android:id="@+id/editText6"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp"
                    android:ems="10"
                    android:inputType="phone"
                    android:hint="Phone"
                    tools:ignore="Autofill,HardcodedText,LabelFor" />

                <EditText
                    android:id="@+id/editText7"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp"
                    android:ems="10"
                    android:inputType="textPostalAddress"
                    android:hint="Address"
                    tools:ignore="Autofill,HardcodedText,LabelFor" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">


                    <EditText
                        android:id="@+id/editText8"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10sp"
                        android:layout_marginEnd="10sp"
                        android:layout_marginTop="5sp"
                        android:layout_weight="1"
                        android:ems="10"
                        android:inputType="textPersonName"
                        android:hint="City"
                        tools:ignore="Autofill,HardcodedText,LabelFor" />

                    <EditText
                        android:id="@+id/editText9"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:layout_marginEnd="10dp"
                        android:layout_marginTop="5dp"
                        android:layout_weight="1"
                        android:ems="10"
                        android:inputType="textPersonName"
                        android:hint="State"
                        tools:ignore="Autofill,HardcodedText,LabelFor" />

                    <EditText
                        android:id="@+id/editText10"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:layout_marginEnd="10dp"
                        android:layout_marginTop="5dp"
                        android:layout_weight="1"
                        android:ems="10"
                        android:inputType="number"
                        android:hint="Pincode"
                        tools:ignore="Autofill,HardcodedText,LabelFor" />
                </LinearLayout>

                <TextView
                    android:id="@+id/textView3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="10dp"
                    android:fontFamily="serif-monospace"
                    android:text="Objective"
                    android:textColor="#EB000000"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    tools:ignore="Autofill,HardcodedText,LabelFor" />

                <EditText
                    android:id="@+id/editText11"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10sp"
                    android:layout_marginTop="5dp"
                    android:ems="10"
                    android:inputType="textMultiLine"
                    android:hint="Enter Objective here"
                    tools:ignore="Autofill,HardcodedText,LabelFor" />

                <TextView
                    android:id="@+id/textView4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="10dp"
                    android:fontFamily="serif-monospace"
                    android:text="Employment"
                    android:textColor="#EB000000"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    tools:ignore="HardcodedText" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <EditText
                        android:id="@+id/editText12"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginStart="10dp"
                        android:layout_marginEnd="10sp"
                        android:layout_marginTop="5dp"
                        android:ems="10"
                        android:inputType="textPersonName"
                        android:hint="Job title"
                        tools:ignore="Autofill,HardcodedText,LabelFor" />

                    <EditText
                        android:id="@+id/editText13"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:layout_marginEnd="10sp"
                        android:layout_marginTop="5dp"
                        android:ems="10"
                        android:inputType="textPostalAddress"
                        android:hint="Employer"
                        tools:ignore="Autofill,HardcodedText,LabelFor" />
                </LinearLayout>

                <EditText
                    android:id="@+id/editText14"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10sp"
                    android:layout_marginTop="5dp"
                    android:ems="10"
                    android:inputType="textMultiLine"
                    android:hint="Job Description"
                    tools:ignore="Autofill,HardcodedText,LabelFor" />

                <EditText
                    android:id="@+id/editText15"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10sp"
                    android:layout_marginTop="5dp"
                    android:ems="10"
                    android:inputType="textMultiLine"
                    android:hint="Skills"
                    tools:ignore="Autofill,HardcodedText,LabelFor" />

                <EditText
                    android:id="@+id/editText16"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10sp"
                    android:layout_marginTop="5dp"
                    android:ems="10"
                    android:inputType="date"
                    android:hint="Experience"
                    tools:ignore="Autofill,HardcodedText,LabelFor" />

                <TextView
                    android:id="@+id/textView5"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="10dp"
                    android:fontFamily="serif-monospace"
                    android:text="Education"
                    android:textColor="#EB000000"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    tools:ignore="HardcodedText" />

                <EditText
                    android:id="@+id/editText17"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10sp"
                    android:layout_marginTop="5dp"
                    android:ems="10"
                    android:inputType="text"
                    android:hint="College Name"
                    tools:ignore="Autofill,HardcodedText,LabelFor" />

                <EditText
                    android:id="@+id/editText18"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10sp"
                    android:layout_marginTop="5dp"
                    android:ems="10"
                    android:inputType="text"
                    android:hint="Degree eg:undergraduate"
                    tools:ignore="Autofill,HardcodedText,LabelFor" />

                <EditText
                    android:id="@+id/editText19"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10sp"
                    android:layout_marginTop="5dp"
                    android:ems="10"
                    android:inputType="date"
                    android:hint="Year of passing"
                    tools:ignore="Autofill,HardcodedText,LabelFor" />

                <EditText
                    android:id="@+id/editText20"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10sp"
                    android:layout_marginTop="5dp"
                    android:ems="10"
                    android:inputType="numberDecimal"
                    android:hint="GPA eg:80%"
                    tools:ignore="Autofill,HardcodedText,LabelFor" />

                <EditText
                    android:id="@+id/editText21"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10sp"
                    android:layout_marginTop="5dp"
                    android:ems="10"
                    android:inputType="textMultiLine"
                    android:hint="Awards &amp; Honors"
                    tools:ignore="Autofill,HardcodedText,LabelFor" />

                <EditText
                    android:id="@+id/editText22"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10sp"
                    android:layout_marginTop="5dp"
                    android:ems="10"
                    android:inputType="textMultiLine"
                    android:hint="Certifications"
                    tools:ignore="Autofill,HardcodedText,LabelFor" />

                <TextView
                    android:id="@+id/textView6"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="10dp"
                    android:fontFamily="serif-monospace"
                    android:text="Hobbies &amp; Interests"
                    android:textColor="#EB000000"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    tools:ignore="HardcodedText" />

                <EditText
                    android:id="@+id/editText23"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10sp"
                    android:layout_marginTop="5dp"
                    android:ems="10"
                    android:inputType="textMultiLine"
                    android:hint="Hobbies &amp; Interests"
                    tools:ignore="Autofill,HardcodedText,LabelFor" />

            </LinearLayout>

        </androidx.core.widget.NestedScrollView>

    </androidx.cardview.widget.CardView>

    <com.google.android.material.bottomappbar.BottomAppBar
        android:id="@+id/bottomAppBar3"
        style="@style/Widget.MaterialComponents.BottomAppBar.Colored"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        app:backgroundTint="#FF5252"
        app:fabAlignmentMode="center"
        app:fabCradleRoundedCornerRadius="20dp"
        app:fabCradleMargin="8sp">

    </com.google.android.material.bottomappbar.BottomAppBar>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/b1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:focusable="true"
        app:backgroundTint="#2979FF"
        app:layout_anchor="@id/bottomAppBar3"
        app:srcCompat="@android:drawable/ic_menu_edit" />

</androidx.coordinatorlayout.widget.CoordinatorLayout>